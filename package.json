		"testEnvironment": "node"
	},
	"bugs": {
		"url": "https://github.com/SumanIslam/NASA-mission-control-project/issues"
	},
	"homepage": "https://github.com/SumanIslam/NASA-mission-control-project#readme",
	"dependencies": {
		"morgan": "^1.10.0",
		"axios": "^0.24.0",
		"cors": "^2.8.5",
		"csv-parse": "^4.16.3",
		"dotenv": "^10.0.0",
		"express": "^4.17.1",
		"mongoose": "^6.0.13",
		"pm2": "^5.1.2"
	},
